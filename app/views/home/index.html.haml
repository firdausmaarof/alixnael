%section#home.full-page.d-none.d-lg-block
  = render partial: 'home'

%nav.navbar.sticky-top.navbar-expand-lg.navbar-light.bg-light
  .container
    = link_to 'Logo', '#', class: 'navbar-brand mx-auto'
    %button.navbar-toggler{type: 'button',data: {target: '#navbarContent', toggle: 'collapse'}, 'aria': {controls: '#navbarContent', expanded: 'false', label: 'Toggle Navigation'}}
      %span.navbar-toggler-icon
    #navbarContent.collapse.navbar-collapse
      %ul.navbar-nav.mx-auto.text-center
        %li.nav-item
          = link_to 'HOME', '#home', class: 'nav-link smoothScroll'
        %li.nav-item
          = link_to 'GROOM & BRIDE', '#who', class: 'nav-link smoothScroll'
        %li.nav-item
          = link_to 'WHEN & WHERE', '#event', class: 'nav-link smoothScroll'
        %li.nav-item
          = link_to 'GUESTBOOK', '#guestbook', class: 'nav-link smoothScroll'
        %li.nav-item
          = link_to 'GALLERY', '#gallery', class: 'nav-link smoothScroll'
        %li.nav-item
          = link_to 'BLOG', '#blog', class: 'nav-link smoothScroll'

%section#home.full-page.d-lg-none
  = render partial: 'home'

